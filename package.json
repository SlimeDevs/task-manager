{
  "name": "todo-api",
  "version": "0.1.0",
  "description": "A todo app REST API with typescript and express",
  "main": "/dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "jest --runInBand --verbose",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brady-miller/todo-api.git"
  },
  "keywords": [
    "todos",
    "todo-api",
    "todo-app",
    "todo-manager"
  ],
  "author": "Brady Miller",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/brady-miller/todo-api/issues"
  },
  "homepage": "https://github.com/brady-miller/todo-api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "jest": "^24.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.14",
    "mongoose": "^5.6.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.44",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.6",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.11.1",
    "nodemon": "^1.19.1",
    "tslint": "^5.18.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r ts-node/register ./src/index.ts",
    "ext": "ts"
  }
}
