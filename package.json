{
  "name": "task-manager",
  "version": "0.0.0",
  "description": "The source code for my task app",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "cross-env NODE_ENV=test jest --runInBand --verbose",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlimeDevs/task-manager.git"
  },
  "keywords": [
    "tasks",
    "task-app",
    "task-manager"
  ],
  "author": "Brady Miller",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SlimeDevs/task-app/issues"
  },
  "homepage": "https://github.com/SlimeDevs/task-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.14",
    "mongoose": "^5.6.1",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.6",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.11.1",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r ts-node/register ./src/index.ts",
    "ext": "ts"
  }
}
